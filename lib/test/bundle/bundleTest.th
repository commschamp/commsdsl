void BundleTestSuite::test8()
{
    auto protocol = prepareProtocol(SCHEMAS_DIR "/Schema8.xml");
    TS_ASSERT(protocol);

    auto namespaces = protocol->lastParsedSchema().namespaces();
    TS_ASSERT_EQUALS(namespaces.size(), 1U);

    auto& ns = namespaces.front();
    TS_ASSERT(ns.name().empty());

    auto fields = ns.fields();
    do {
        TS_ASSERT_LESS_THAN_EQUALS(1U, fields.size());

        auto& field = fields[0];
        TS_ASSERT_EQUALS(field.name(), "Bundle1");
        TS_ASSERT_EQUALS(field.kind(), commsdsl::parse::ParseField::Kind::Bundle);

        commsdsl::parse::ParseBundleField bundleField(field);
        auto members = bundleField.members();
        TS_ASSERT_EQUALS(members.size(), 3U);
        auto& mem1 = members[0];
        auto& mem2 = members[1];
        auto& mem3 = members[2];
        TS_ASSERT_EQUALS(mem1.kind(), commsdsl::parse::ParseField::Kind::Enum);
        TS_ASSERT_EQUALS(mem2.kind(), commsdsl::parse::ParseField::Kind::Int);
        TS_ASSERT_EQUALS(mem3.kind(), commsdsl::parse::ParseField::Kind::Set);
        
        commsdsl::parse::ParseIntField intField(mem2);
        TS_ASSERT_EQUALS(intField.semanticType(), commsdsl::parse::ParseField::SemanticType::Length);
    } while (false);

    do {
        TS_ASSERT_LESS_THAN_EQUALS(2U, fields.size());

        auto& field = fields[1];
        TS_ASSERT_EQUALS(field.name(), "Bundle2");
        TS_ASSERT_EQUALS(field.kind(), commsdsl::parse::ParseField::Kind::Bundle);

        commsdsl::parse::ParseBundleField bundleField(field);
        auto members = bundleField.members();
        TS_ASSERT_EQUALS(members.size(), 3U);
        auto& mem1 = members[0];
        auto& mem2 = members[1];
        auto& mem3 = members[2];
        TS_ASSERT_EQUALS(mem1.kind(), commsdsl::parse::ParseField::Kind::Int);
        TS_ASSERT_EQUALS(mem2.kind(), commsdsl::parse::ParseField::Kind::Bundle);
        TS_ASSERT_EQUALS(mem3.kind(), commsdsl::parse::ParseField::Kind::String);
        
        commsdsl::parse::ParseBundleField lengthField(mem2);
        TS_ASSERT_EQUALS(lengthField.semanticType(), commsdsl::parse::ParseField::SemanticType::Length);
        TS_ASSERT_EQUALS(lengthField.valueOverride(), commsdsl::parse::ParseOverrideType_Replace);
    } while (false);    
}

