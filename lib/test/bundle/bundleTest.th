void BundleTestSuite::test11()
{
    auto protocol = prepareProtocol(SCHEMAS_DIR "/Schema11.xml");
    TS_ASSERT(protocol);

    auto namespaces = protocol->lastParsedSchema().namespaces();
    TS_ASSERT_EQUALS(namespaces.size(), 1U);

    auto& ns = namespaces.front();
    TS_ASSERT(ns.name().empty());

    auto fields = ns.fields();
    do {
        TS_ASSERT(!fields.empty());
        auto& field = fields.front();
        TS_ASSERT_EQUALS(field.name(), "B1");
        TS_ASSERT_EQUALS(field.kind(), commsdsl::parse::ParseField::Kind::Bundle);

        commsdsl::parse::ParseBundleField bundleField(field);
        auto members = bundleField.members();
        TS_ASSERT_EQUALS(members.size(), 3U);
        auto& mem1 = members[0];
        auto& mem2 = members[1];
        auto& mem3 = members[2];
        TS_ASSERT_EQUALS(mem1.kind(), commsdsl::parse::ParseField::Kind::Int);
        TS_ASSERT_EQUALS(mem2.kind(), commsdsl::parse::ParseField::Kind::Int);
        TS_ASSERT_EQUALS(mem3.kind(), commsdsl::parse::ParseField::Kind::Int);
    
        commsdsl::parse::ParseIntField lengthField(mem2);
        TS_ASSERT_EQUALS(lengthField.semanticType(), commsdsl::parse::ParseField::SemanticType::Length);    

        commsdsl::parse::ParseIntField valueField(mem3);
        TS_ASSERT(valueField.availableLengthLimit());
    } while (false);

    do {
        TS_ASSERT(2U <= fields.size());
        auto& field = fields[1];
        TS_ASSERT_EQUALS(field.name(), "B2");
        TS_ASSERT_EQUALS(field.kind(), commsdsl::parse::ParseField::Kind::Bundle);

        commsdsl::parse::ParseBundleField bundleField(field);
        auto members = bundleField.members();
        TS_ASSERT_EQUALS(members.size(), 3U);
        auto& mem1 = members[0];
        auto& mem2 = members[1];
        auto& mem3 = members[2];
        TS_ASSERT_EQUALS(mem1.kind(), commsdsl::parse::ParseField::Kind::Int);
        TS_ASSERT_EQUALS(mem2.kind(), commsdsl::parse::ParseField::Kind::Int);
        TS_ASSERT_EQUALS(mem3.kind(), commsdsl::parse::ParseField::Kind::Enum);
    
        commsdsl::parse::ParseIntField lengthField(mem2);
        TS_ASSERT_EQUALS(lengthField.semanticType(), commsdsl::parse::ParseField::SemanticType::Length);    

        commsdsl::parse::ParseEnumField valueField(mem3);
        TS_ASSERT(valueField.availableLengthLimit());
    } while (false);    

    do {
        TS_ASSERT(3U <= fields.size());
        auto& field = fields[2];
        TS_ASSERT_EQUALS(field.name(), "B3");
        TS_ASSERT_EQUALS(field.kind(), commsdsl::parse::ParseField::Kind::Bundle);

        commsdsl::parse::ParseBundleField bundleField(field);
        auto members = bundleField.members();
        TS_ASSERT_EQUALS(members.size(), 3U);
        auto& mem1 = members[0];
        auto& mem2 = members[1];
        auto& mem3 = members[2];
        TS_ASSERT_EQUALS(mem1.kind(), commsdsl::parse::ParseField::Kind::Int);
        TS_ASSERT_EQUALS(mem2.kind(), commsdsl::parse::ParseField::Kind::Int);
        TS_ASSERT_EQUALS(mem3.kind(), commsdsl::parse::ParseField::Kind::Set);
    
        commsdsl::parse::ParseIntField lengthField(mem2);
        TS_ASSERT_EQUALS(lengthField.semanticType(), commsdsl::parse::ParseField::SemanticType::Length);    

        commsdsl::parse::ParseSetField valueField(mem3);
        TS_ASSERT(valueField.availableLengthLimit());
    } while (false);        
}


void BundleTestSuite::test12()
{
    auto protocol = prepareProtocol(SCHEMAS_DIR "/Schema12.xml");
    TS_ASSERT(protocol);

    auto namespaces = protocol->lastParsedSchema().namespaces();
    TS_ASSERT_EQUALS(namespaces.size(), 1U);

    auto& ns = namespaces.front();
    TS_ASSERT(ns.name().empty());

    auto fields = ns.fields();
    do {
        TS_ASSERT(2U <= fields.size());
        auto& field = fields[1];
        TS_ASSERT_EQUALS(field.name(), "B2");
        TS_ASSERT_EQUALS(field.kind(), commsdsl::parse::ParseField::Kind::Bundle);

        commsdsl::parse::ParseBundleField bundleField(field);
        TS_ASSERT(!bundleField.validCond().valid());        
        auto members = bundleField.members();
        TS_ASSERT_EQUALS(members.size(), 3U);
        auto& mem1 = members[0];
        auto& mem2 = members[1];
        auto& mem3 = members[2];
        TS_ASSERT_EQUALS(mem1.kind(), commsdsl::parse::ParseField::Kind::Int);
        TS_ASSERT_EQUALS(mem2.kind(), commsdsl::parse::ParseField::Kind::Int);
        TS_ASSERT_EQUALS(mem3.kind(), commsdsl::parse::ParseField::Kind::String);

        commsdsl::parse::ParseIntField typeField(mem1);
        TS_ASSERT_EQUALS(typeField.defaultValue(), 2);    
    
        commsdsl::parse::ParseIntField lengthField(mem2);
        TS_ASSERT_EQUALS(lengthField.semanticType(), commsdsl::parse::ParseField::SemanticType::Length);    
    } while (false);    
}

