void InterfaceTestSuite::test7()
{
    auto protocol = prepareProtocol(SCHEMAS_DIR "/Schema7.xml");
    TS_ASSERT(protocol);

    auto namespaces = protocol->parseLastParsedSchema().parseNamespaces();
    TS_ASSERT_EQUALS(namespaces.size(), 1U);

    auto& ns = namespaces.front();
    TS_ASSERT(ns.parseName().empty());

    auto interfaces = ns.parseInterfaces();
    {
        TS_ASSERT_LESS_THAN_EQUALS(1U, interfaces.size());

        auto& int1 = interfaces[0];
        TS_ASSERT_EQUALS(int1.parseName(), "I1");
        TS_ASSERT_EQUALS(int1.parseFields().size(), 1U);
    }

    {
        TS_ASSERT_LESS_THAN_EQUALS(2U, interfaces.size());

        auto& int2 = interfaces[1];
        TS_ASSERT_EQUALS(int2.parseName(), "I2");
        TS_ASSERT_EQUALS(int2.parseFields().size(), 2U);
        TS_ASSERT(!int2.parseDescription().empty());
    }
}
