#include <limits>

#include "CommonTestSuite.h"

#include "commsdsl/parse/ParseInterface.h"

class InterfaceTestSuite : public CommonTestSuite, public CxxTest::TestSuite
{
public:
    void setUp();
    void tearDown();
    void test1();
    void test2();
    void test3();
    void test4();
    void test5();
    void test6();
    void test7();
};

void InterfaceTestSuite::setUp()
{
    CommonTestSuite::commonSetUp();
}

void InterfaceTestSuite::tearDown()
{
    CommonTestSuite::commonTearDown();
}

void InterfaceTestSuite::test1()
{
    auto protocol = prepareProtocol(SCHEMAS_DIR "/Schema1.xml");
    TS_ASSERT(protocol);

    auto namespaces = protocol->parseLastParsedSchema().parseNamespaces();
    TS_ASSERT_EQUALS(namespaces.size(), 1U);

    auto& ns = namespaces.front();
    TS_ASSERT(ns.parseName().empty());

    auto interfaces = ns.parseInterfaces();
    TS_ASSERT_EQUALS(interfaces.size(), 1U);

    auto& int1 = interfaces[0];
    TS_ASSERT_EQUALS(int1.parseName(), "Generic");
    TS_ASSERT(int1.parseFields().empty());
}

void InterfaceTestSuite::test2()
{
    auto protocol = prepareProtocol(SCHEMAS_DIR "/Schema2.xml");
    TS_ASSERT(protocol);

    auto namespaces = protocol->parseLastParsedSchema().parseNamespaces();
    TS_ASSERT_EQUALS(namespaces.size(), 1U);

    auto& ns = namespaces.front();
    TS_ASSERT_EQUALS(ns.parseName(), "ns1");

    auto interfaces = ns.parseInterfaces();
    TS_ASSERT_EQUALS(interfaces.size(), 1U);

    auto& int1 = interfaces[0];
    TS_ASSERT_EQUALS(int1.parseName(), "Generic");
    auto fields = int1.parseFields();
    TS_ASSERT_EQUALS(fields.size(), 1U);
    TS_ASSERT_EQUALS(fields.front().parseKind(), commsdsl::parse::ParseField::ParseKind::Int);
    TS_ASSERT_EQUALS(fields.front().parseSemanticType(), commsdsl::parse::ParseField::ParseSemanticType::Version);
}

void InterfaceTestSuite::test3()
{
    auto protocol = prepareProtocol(SCHEMAS_DIR "/Schema3.xml");
    TS_ASSERT(protocol);

    auto namespaces = protocol->parseLastParsedSchema().parseNamespaces();
    TS_ASSERT_EQUALS(namespaces.size(), 2U);

    auto& ns1 = namespaces.front();
    auto& ns2 = namespaces.back();
    TS_ASSERT(ns1.parseName().empty());
    TS_ASSERT_EQUALS(ns2.parseName(), "ns1");

    auto interfaces1 = ns1.parseInterfaces();
    auto interfaces2 = ns2.parseInterfaces();
    TS_ASSERT_EQUALS(interfaces1.size(), 1U);
    TS_ASSERT_EQUALS(interfaces2.size(), 1U);

    auto& int1 = interfaces1[0];
    auto& int2 = interfaces2[0];
    TS_ASSERT_EQUALS(int1.parseName(), "Generic");
    TS_ASSERT_EQUALS(int2.parseName(), "I1");
    auto fields1 = int1.parseFields();
    auto fields2 = int2.parseFields();
    TS_ASSERT_EQUALS(fields1.size(), 1U);
    TS_ASSERT_EQUALS(fields2.size(), 2U);
}

