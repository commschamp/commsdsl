void FrameTestSuite::test8()
{
    auto protocol = prepareProtocol(SCHEMAS_DIR "/Schema8.xml");
    TS_ASSERT(protocol);

    auto namespaces = protocol->namespaces();
    TS_ASSERT_EQUALS(namespaces.size(), 1U);

    auto& ns = namespaces.front();
    TS_ASSERT_EQUALS(ns.name(), "ns1");

    auto frames = ns.frames();
    TS_ASSERT_EQUALS(frames.size(), 1U);

    auto& frame1 = frames[0];
    TS_ASSERT_EQUALS(frame1.name(), "Generic");

    auto layers = frame1.layers();
    TS_ASSERT_EQUALS(layers.size(), 5U);

    auto& l1 = layers[0];
    auto& l2 = layers[1];
    auto& l3 = layers[2];
    auto& l4 = layers[3];
    auto& l5 = layers[4];

    TS_ASSERT_EQUALS(l1.kind(), commsdsl::Layer::Kind::Sync);
    TS_ASSERT_EQUALS(l1.name(), "Sync");
    TS_ASSERT(l1.hasField());
    auto f1 = l1.field();
    TS_ASSERT_EQUALS(f1.externalRef(), "ns1.Sync");

    TS_ASSERT_EQUALS(l2.kind(), commsdsl::Layer::Kind::Size);
    TS_ASSERT_EQUALS(l2.name(), "Size");
    TS_ASSERT(l2.hasField());
    auto f2 = l2.field();
    TS_ASSERT(f2.externalRef().empty());

    TS_ASSERT_EQUALS(l3.kind(), commsdsl::Layer::Kind::Id);
    TS_ASSERT_EQUALS(l3.name(), "Id");
    TS_ASSERT(l3.hasField());
    auto f3 = l3.field();
    TS_ASSERT_EQUALS(f3.externalRef(), "ns1.MsgId");

    TS_ASSERT_EQUALS(l4.kind(), commsdsl::Layer::Kind::Payload);
    TS_ASSERT_EQUALS(l4.name(), "Data");
    TS_ASSERT(!l4.hasField());

    TS_ASSERT_EQUALS(l5.kind(), commsdsl::Layer::Kind::Checksum);
    TS_ASSERT_EQUALS(l5.name(), "Checksum");
    TS_ASSERT(l5.hasField());
    auto f5 = l5.field();
    TS_ASSERT(f5.externalRef().empty());
    commsdsl::ChecksumLayer checksum(l5);
    TS_ASSERT_EQUALS(checksum.alg(), commsdsl::ChecksumLayer::Alg::Crc_CCITT);
    TS_ASSERT_EQUALS(checksum.fromLayer(), l2.name());
    TS_ASSERT(checksum.untilLayer().empty());
    TS_ASSERT(!checksum.verifyBeforeRead());
}

void FrameTestSuite::test9()
{
    auto protocol = prepareProtocol(SCHEMAS_DIR "/Schema9.xml");
    TS_ASSERT(protocol);

    auto namespaces = protocol->namespaces();
    TS_ASSERT_EQUALS(namespaces.size(), 1U);

    auto& ns = namespaces.front();
    TS_ASSERT_EQUALS(ns.name(), "ns1");

    auto frames = ns.frames();
    TS_ASSERT_EQUALS(frames.size(), 1U);

    auto& frame1 = frames[0];
    TS_ASSERT_EQUALS(frame1.name(), "Generic");

    auto layers = frame1.layers();
    TS_ASSERT_EQUALS(layers.size(), 5U);

    auto& l1 = layers[0];
    auto& l2 = layers[1];
    auto& l3 = layers[2];
    auto& l4 = layers[3];
    auto& l5 = layers[4];

    TS_ASSERT_EQUALS(l1.kind(), commsdsl::Layer::Kind::Sync);
    TS_ASSERT_EQUALS(l1.name(), "Sync");
    TS_ASSERT(l1.hasField());
    auto f1 = l1.field();
    TS_ASSERT_EQUALS(f1.externalRef(), "ns1.Sync");

    TS_ASSERT_EQUALS(l2.kind(), commsdsl::Layer::Kind::Size);
    TS_ASSERT_EQUALS(l2.name(), "Size");
    TS_ASSERT(l2.hasField());
    auto f2 = l2.field();
    TS_ASSERT(f2.externalRef().empty());

    TS_ASSERT_EQUALS(l3.kind(), commsdsl::Layer::Kind::Checksum);
    TS_ASSERT_EQUALS(l3.name(), "Checksum");
    TS_ASSERT(l3.hasField());
    auto f3 = l3.field();
    TS_ASSERT(f3.externalRef().empty());
    commsdsl::ChecksumLayer checksum(l3);
    TS_ASSERT_EQUALS(checksum.alg(), commsdsl::ChecksumLayer::Alg::Custom);
    TS_ASSERT_EQUALS(checksum.customAlgName(), "MyAlg");
    TS_ASSERT(checksum.fromLayer().empty());
    TS_ASSERT_EQUALS(checksum.untilLayer(), l5.name());
    TS_ASSERT(checksum.verifyBeforeRead());

    TS_ASSERT_EQUALS(l4.kind(), commsdsl::Layer::Kind::Id);
    TS_ASSERT_EQUALS(l4.name(), "Id");
    TS_ASSERT(l4.hasField());
    auto f4 = l4.field();
    TS_ASSERT_EQUALS(f4.externalRef(), "ns1.MsgId");

    TS_ASSERT_EQUALS(l5.kind(), commsdsl::Layer::Kind::Payload);
    TS_ASSERT_EQUALS(l5.name(), "Data");
    TS_ASSERT(!l5.hasField());
}

